{
  "manifest_version": 3,
  "name": "Postman Mini",
  "version": "1.0",
  "description": "Postman Mini is a lightweight API testing tool integrated into your browser for quick and easy API requests.",
  "icons": {
    "16": "postman-mini.png",
    "48": "postman-mini.png",
    "128": "postman-mini.png"
  },
  "permissions": ["storage", "activeTab", "scripting"],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Postman Mini",
    "default_icons": {
      "16": "postman-mini.png",
      "48": "postman-mini.png",
      "128": "postman-mini.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
